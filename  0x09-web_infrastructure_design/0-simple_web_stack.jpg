#!/usr/bin/env bash

if [ "$#" -lt 4 ]; then
    echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi

FILE=$1
SERVER_IP=$2
USERNAME=$3
SSH_KEY=$4
PORT=38731  # <--- Update this if your sandbox uses a different port

scp -P "$PORT" -i "$SSH_KEY" -o StrictHostKeyChecking=no "$FILE" "${USERNAME}@${SERVER_IP}:~/"
